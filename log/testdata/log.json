{
	"format": "text:%l %S %F() - %m%n%T",
	"level": {
		"*": "info",
		"sql": "debug",
		"http": "trace"
	},
	"writer": [{
		"_": "stdout",
		"format": "%l - %m%n%T",
		"filter": "name:out level:debug"
	}, {
		"_": "stderr",
		"color": true,
		"format": "%l - %m%n%T",
		"filter": "level:error"
	}, {
		"_": "conn",
		"_async": 1000,
		"net": "tcp",
		"addr": "localhost:9999",
		"timeout": "5s",
		"format": "%l - %m%n%T",
		"filter": "level:error"
	}, {
		"_": "file",
		"_async": 1000,
		"path": "/tmp/gotest/logs/test.log",
		"dirPerm": 511,
		"maxDays": 7,
		"syncLevel": "error",
		"format": "%l %S:%L %F() - %m%n%T",
		"filter": "level:error"
	}, {
		"_": "slack",
		"_async": 1000,
		"subject": "%l - %m", 
		"channel": "develop",
		"username": "gotest",
		"webhook": "https://hooks.slack.com/services/...",
		"timeout": "5s",
		"format": "%l - %m%n%T",
		"filter": "level:error"
	}, {
		"_": "smtp",
		"_async": 1000,
		"host": "localhost",
		"port": 25,
		"username": "-----",
		"password": "xxxxxxx",
		"from": "pango@google.com",
		"to": "to1@test.com; to2@test.com",
		"cc": "cc1@test.com; cc2@test.com",
		"timeout": "5s",
		"subject": "%l - %m", 
		"format": "%l - %m%n%T",
		"filter": "level:error"
	}, {
		"_": "webhook",
		"_async": 1000,
		"webhook": "http://localhost:9200/pango/logs",
		"contentType": "application/json",
		"timeout": "5s",
		"format": "json:{\"when\":%t{2006-01-02T15:04:05.000Z07:00}, \"level\":%l, \"file\":%S, \"line\":%L, \"func\":%F, \"msg\": %m, \"stack\": %T}%n",
		"filter": "level:error"
	}]
}
